@{
    ViewBag.Title = "Css3";
}

<style>
    a.box {
        display:block;
        width: 100px;
        height: 100px;
        background: #00f; /* blue */
        border: 1px solid #000;
        
        -webkit-transition: all 1s linear;
        -webkit-transform: translate(100px,50px);
    }
    a.box:hover {
        background: #f00;
        
        -webkit-transform: translate(100px,50px) scale(1.1) rotate(30deg);
    }
</style>

<a href="#" class="box"></a>